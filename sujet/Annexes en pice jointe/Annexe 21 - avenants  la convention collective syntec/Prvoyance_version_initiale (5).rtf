{\rtf1 \ansi {\*\userprops {\propname jforCreatedThisOn}\proptype30 {\staticval Sun Jan 11 14:26:20 CET 2015}{\propname jforVersion}\proptype30 {\staticval jfor V0.7.2rc1 - see http://www.jfor.org}}{\colortbl; \red0\green0\blue0;\red255\green255\blue255;\red255\green0\blue0;\red0\green255\blue0;\red0\green0\blue255;\red0\green255\blue255;\red255\green0\blue255;\red255\green255\blue0;\red0\green0\blue128;\red0\green128\blue128;\red0\green128\blue0;\red128\green0\blue128;\red128\green0\blue0;\red128\green128\blue0;\red128\green128\blue128;\red192\green192\blue192;}{\fonttbl; {\f0 arial}{\f1 symbol}{\f2 times new roman}}{\*\listtable{\list\listtemplateid778345876\listsimple{\listlevel\levelnfc23\leveljc0\levelfollow0\levelstartat1\levelspace0\levelindent360{\leveltext\'01\'b7 ?;}{\levelnumbers}\f2}{\listname ;}\listid-1947952367}}{\*\listoverridetable{\listoverride\listid-1947952367\listoverridecount0\ls1}}{\*\listtable{\list\listtemplateid1606859444\listsimple{\listlevel\levelnfc23\leveljc0\levelfollow0\levelstartat1\levelspace0\levelindent360{\leveltext\'01\'b7 ?;}{\levelnumbers}\f2}{\listname ;}\listid-1946798120}}{\*\listoverridetable{\listoverride\listid-1946798120\listoverridecount0\ls2}}\paperw11905 \paperh16837 \margt1133 \margb1133 \margl1133 \margr1133 \sectd {\qr {\fs24 Le 11 janvier 2015}\par }{{ }\par }{{ }\par }{\qc {\fs24 BO n°2013-31}\par }{{ }\par }{\qc {\fs24 Texte n°2}\par }{{ }\par }{{ }\par }{\qc {\fs24 Accord}\par }{\qc {\b \fs24 Accord du 12 juin 2013 relatif à la prévoyance}\par }{{ }\par }{{ }\par }{{ }\par }{{ }\par }{{ }\par }{\ql {}{\b \fs24 Préambule}{ }\par }{{ }\par }{{ }\par }{\ql {\fs24 A la suite de l\rquote accord national interprofessionnel du 11 janvier 2013, et dans l\rquote attente des dispositions légales et réglementaires, les partenaires sociaux de la branche ont engagé le 20 mars 2013 une négociation relative à la mise en place, par accord de branche, d\rquote une couverture collective à adhésion obligatoire en matière de remboursements complémentaires des frais occasionnés par une maladie, une maternité ou un accident couvrant les salariés ne bénéficiant pas de couverture complémentaire dans le cadre de leur entreprise.}\par }{{ }\par }{\ql {\fs24 La mise en place de cette couverture s\rquote inscrit dans le cadre de l\rquote évolution des dispositions légales, réglementaires et interprofessionnelles applicables. Les partenaires sociaux de la branche souhaitent la conclusion du présent accord de méthode afin de préparer la négociation de l\rquote accord de branche dans les meilleures conditions et aboutir à un accord de branche dans les délais imposés. }\par }{{ }\par }{\ql {}{\b \fs24 Chapitre Ier Objet de la négociation}{ }\par }{{ }\par }{{ }\par }{\ql {\fs24 Les parties signataires, à travers la conduite d\rquote une négociation de branche sur le thème de la mise en place d\rquote une couverture collective à adhésion obligatoire en matière de remboursements complémentaires des frais occasionnés par une maladie, une maternité ou un accident et la recherche du présent accord, affirment par la signature du présent accord leur volonté commune d\rquote améliorer le dispositif de protection sociale dans la branche.}\par }{{ }\par }{\ql {\fs24 Cet accord de méthode a vocation à permettre aux partenaires sociaux de la branche de déterminer les bases de la négociation d\rquote un accord de branche, applicable au plus tard au 30 juin 2014.}\par }{{ }\par }{\ql {\fs24 Le présent accord définit pour ce faire une méthode de travail et un calendrier qui s\rquote appliquent à toutes les parties.}\par }{{ }\par }{\ql {\fs24 Les parties signataires rappellent que tout dispositif visant à améliorer les conditions de travail des salariés doit être conçu comme une démarche de progrès constante, adaptée et réactualisée, prenant en compte, notamment, les retours d\rquote expérience. }\par }{{ }\par }{\ql {}{\b \fs24 Chapitre II Préparation et méthode}{ }\par }{{ }\par }{{ }\par }{\ql {\fs24 Afin d\rquote aborder la négociation de l\rquote accord sur la couverture collective à adhésion obligatoire en matière de remboursements complémentaires des frais occasionnés par une maladie, une maternité ou un accident dans les meilleures conditions, les organisations syndicales et patronales décident que les différentes phases de préparation de la négociation sont les suivantes. }\par }{{ }\par }{\ql {}{\b \fs24 Article 1er}{ }\par }{{ }\par }{{ }\par }{\ql {\fs24 L\rquote objectif de la CPCCN consiste à élaborer un accord de branche qui instaure une couverture collective à adhésion obligatoire en matière de remboursements complémentaires des frais occasionnés par une maladie, une maternité ou un accident couvrant les salariés ne bénéficiant pas de couverture complémentaire dans le cadre de leur entreprise, selon le cadre de négociation et le calendrier fixés aux articles 2 et 3 du présent accord, et en respect des principes suivants. }\par }{{ }\par }{\ql {}{\b \fs24 Article 2}{ }\par }{{ }\par }{{ }\par }{\ql {\fs24 Pour permettre à la CPCCN de préparer au mieux les éléments du futur accord, les parties signataires conviennent, sur la base des dispositions légales, réglementaires et interprofessionnelles applicables, d\rquote un cadre qui servira de base aux futures négociations.}\par }{{ }\par }{\ql {\fs24 L\rquote accord de branche s\rquote articule notamment autour des éléments suivants :}\par }{{ }\par }{\ql {\fs24 \u8211\'3f la détermination de la couverture :}\par }{{ }\par }{\ql {\fs24 \u8211\'3f champ d\rquote application de la couverture ;}\par }{{ }\par }{\ql {\fs24 \u8211\'3f conditions et le délai de mise en \u339\'3fuvre de l\rquote accord de branche par les entreprises ;}\par }{{ }\par }{\ql {\fs24 \u8211\'3f bénéficiaires ;}\par }{{ }\par }{\ql {\fs24 \u8211\'3f cas dans lesquels la situation de certains salariés justifie des dispenses d\rquote affiliation ;}\par }{{ }\par }{\ql {\fs24 \u8211\'3f définition du contenu et du niveau des garanties ;}\par }{{ }\par }{\ql {\fs24 \u8211\'3f taux de cotisation ;}\par }{{ }\par }{\ql {\fs24 \u8211\'3f assiette de la cotisation ;}\par }{{ }\par }{\ql {\fs24 \u8211\'3f répartition de la cotisation entre l\rquote employeur et le salarié ;}\par }{{ }\par }{\ql {\fs24 \u8211\'3f conditions de la mutualisation ;}\par }{{ }\par }{\ql {\fs24 \u8211\'3f les modalités de choix du ou des organismes ;}\par }{{ }\par }{\ql {\fs24 \u8211\'3f l\rquote élaboration de l\rquote appel d\rquote offres et du cahier des charges associé, dans le respect des principes de transparence et de mise en concurrence préalable ;}\par }{{ }\par }{\ql {\fs24 \u8211\'3f les conditions de la portabilité des droits. }\par }{{ }\par }{\ql {}{\b \fs24 Article 3}{ }\par }{{ }\par }{{ }\par }{\ql {\fs24 Les représentants ne doivent en aucun cas se trouver en situation de conflit d\rquote intérêts.}\par }{{ }\par }{\ql {\fs24 Est considéré comme une situation de conflit d\rquote intérêts le cas où l\rquote un des représentants mandatés de la CPCCN exerce ou a exercé au cours des 5 dernières années des fonctions au sein d\rquote une instance dirigeante, telle qu\rquote un conseil d\rquote administration, de l\rquote organisme candidat, d\rquote une instance non dirigeante, de type commission de suivi du régime de prévoyance de branche (des organismes d\rquote assurance habilités à pratiquer les opérations visées aux branches 1 et 2 de l\rquote article R. 321-1 du code des assurances, des institutions de prévoyance habilitées à pratiquer les opérations visées par l\rquote article L. 931-1 du code de la sécurité sociale ; des mutuelles habilitées à pratiquer les opérations visées par l\rquote article L. 211-1 du code de la mutualité ou des organismes qui leur sont affiliés au sens de la directive 98/78/CE sur la surveillance complémentaire des groupes d\rquote assurance).}\par }{{ }\par }{\ql {\fs24 La CPCCN prend toute mesure qu\rquote elle juge nécessaire pour prévenir toute situation de conflit d\rquote intérêts.}\par }{{ }\par }{\ql {\fs24 Elle se saisit ou est saisie par le ou les représentants mandatés concernés par toute nouvelle situation de conflit d\rquote intérêts dans laquelle ils pourraient se trouver placés à partir de l\rquote étape de dépouillement des candidatures des organismes répondant à l\rquote appel d\rquote offres.}\par }{{ }\par }{\ql {\fs24 La CPCCN doit alors statuer sur ces situations dans un délai qu\rquote elle aurait elle-même décidé.}\par }{{ }\par }{\ql {\fs24 La CPCCN s\rquote assure en conséquence, au début de chaque séance, qu\rquote aucun des représentants mandatés n\rquote est en situation de conflit d\rquote intérêts, par déclaration sur l\rquote honneur de chacun de ses membres au début de chaque réunion. Cette information figure au procès-verbal synthétique de la séance.}\par }{{ }\par }{\ql {\fs24 A l\rquote issue de l\rquote appel d\rquote offres, aucun représentant mandaté de la CPCCN ne peut exercer de fonctions délibérantes ou dirigeantes au sein de l\rquote organisme retenu pendant la durée du contrat. }\par }{{ }\par }{\ql {}{\b \fs24 Article 4}{ }\par }{{ }\par }{{ }\par }{\ql {\fs24 A titre indicatif, le nombre des réunions (calendrier) défini par les partenaires sociaux signataires du présent accord de branche est le suivant :}\par }{{ }\par }{\ql {\fs24 \u8211\'3f quatre réunions seront consacrées :}\par }{{ }\par }{\ql {\fs24 \u8211\'3f à la détermination de la modalité de choix des organismes, comprenant notamment les conditions tarifaires et d\rquote adhésion ;}\par }{{ }\par }{\ql {\fs24 \u8211\'3f à la détermination de la couverture ;}\par }{{ }\par }{\ql {\fs24 \u8211\'3f aux conditions de la portabilité des droits ;}\par }{{ }\par }{\ql {\fs24 \u8211\'3f une réunion sera consacrée à l\rquote élaboration de l\rquote appel d\rquote offres et la finalisation du cahier des charges associé ;}\par }{{ }\par }{\ql {\fs24 \u8211\'3f une réunion sera consacrée au dépouillement des candidatures des organismes ;}\par }{{ }\par }{\ql {\fs24 \u8211\'3f une réunion sera consacrée à l\rquote audition des organismes répondants ;}\par }{{ }\par }{\ql {\fs24 \u8211\'3f une réunion sera consacrée au choix du ou des organismes retenus.}\par }{{ }\par }{\ql {\fs24 Le projet d\rquote accord sur la mise en place de la couverture collective à adhésion obligatoire en matière de remboursements complémentaires des frais occasionnés par une maladie, une maternité ou un accident sera soumis à la signature lors de la CPCCN du mois de février 2014. }\par }{{ }\par }{\ql {}{\b \fs24 Chapitre III Durée de l\rquote accord}{ }\par }{{ }\par }{{ }\par }{\ql {\fs24 Le présent accord est conclu, à compter de sa date de signature sans réserve, pour la durée des négociations et jusqu\rquote à la date de signature de l\rquote accord de branche relatif à la mise en place de la couverture collective à adhésion obligatoire en matière de remboursements complémentaires des frais occasionnés par une maladie, une maternité ou un accident. }\par }{{ }\par }{\ql {}{\b \fs24 Chapitre IV Révision. \u8211\'3f Dénonciation}{ }\par }{{ }\par }{{ }\par }{\ql {\fs24 Le présent accord est susceptible d\rquote être modifié, par avenant, pendant toute la durée de son application d\rquote un commun accord entre les parties. }\par }{{ }\par }{\ql {\fs24 Les conditions de dénonciation et révision sont respectivement régies par les articles 81 et 82 de la convention collective nationale. }\par }{{ }\par }{\ql {}{\b \fs24 Chapitre V Dépôt}{ }\par }{{ }\par }{{ }\par }{\ql {\fs24 Le présent accord est déposé par la partie la plus diligente, conformément aux dispositions légales, réglementaires et conventionnelles. }\par }{{ }\par }{{ }\par }{{ }\par }\sect }